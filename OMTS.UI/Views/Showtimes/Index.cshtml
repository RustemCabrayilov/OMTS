@model List<ShowtimeVM>


<form asp-action="Create">
	<table class="table">
		<thead>
			<tr>
				<th scope="col">Movie</th>
				<th scope="col">Seat Number</th>
				<th scope="col">Start Time</th>
				<th scope="col">End Time</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<th scope="row">@item.CinemaHallName</th>
					<td>@item.MovieTitle</td>
					<td>@item.StartTime</td>
					<td>@item.EndTime</td>
					<td>
						<li class="list-group-item"><a asp-controller="Seat" asp-action="Index" asp-route-customerId="@item.CustomerId" asp-route-showtimeId="@item.Id" asp-route-movieId="@item.MovieId" class="btn-primary">Book</a></li>
					</td>

				</tr>

			}
		</tbody>
	</table>

</form>