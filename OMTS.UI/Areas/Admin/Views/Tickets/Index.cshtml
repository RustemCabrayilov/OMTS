﻿﻿@{
	ViewData["Title"] = "Index";
}

@model List<TicketVM>

<div class="container-fluid">
	<div class="container">
		<div class="d-flex justify-content-end mb-3">  @Html.ActionLink("Add", "Create", "Tickets", null, new { @class = "btn btn-primary" })</div>
		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Customer Name</th>
					<th scope="col">Movie Name</th>
					<th scope="col">Operation</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.Id</th>
						<td>@item.CustomerName</td>
						<td>@item.MovieName</td>
						<td>
							<a class="btn btn-warning" asp-area="admin" asp-controller="Tickets" asp-action="Edit" asp-route-id="@item.Id">
								<i class="far fa-pen-to-square"></i>
							</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="Tickets" asp-action="Delete" asp-route-id="@item.Id">
								<i class="fas fa-trash-can"></i>
							</a>
						</td>
					</tr>
				}


			</tbody>
		</table>
	</div>
</div>
