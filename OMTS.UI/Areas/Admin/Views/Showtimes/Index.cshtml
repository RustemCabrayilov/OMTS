﻿﻿@{
	ViewData["Title"] = "Index";
}

@model List<ShowtimeVM>
﻿@{
	ViewData["Title"] = "Index";
}
<div class="container-fluid">
	<div class="container">
		<div class="d-flex justify-content-end mb-3">  @Html.ActionLink("Add", "Create", "Showtimes", null, new { @class = "btn btn-primary" })</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Cinema Hall</th>
					<th scope="col">Movie</th>
					<th scope="col">Start Time</th>
					<th scope="col">End Time</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.Id</th>
						@* <td><img width="150px" height="150px" src="@Url.Content($"~/images/{item.Thumbnail}")" /></td> *@
						<td>@item.CinemaHallName</td>
						<td>@item.MovieTitle</td>
						<td>@item.StartTime</td>
						<td>@item.EndTime</td>
						<td>
							<a class="btn btn-warning" asp-area="admin" asp-controller="Showtimes" asp-action="Edit" asp-route-id="@item.Id">
								<i class="far fa-pen-to-square"></i>

							</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="Showtimes" asp-action="Delete" asp-route-id="@item.Id">
								<i class="fas fa-trash-can"></i>
							</a>
						</td>
					</tr>
				}


			</tbody>
		</table>

	</div>
</div>
