﻿﻿@{
	ViewData["Title"] = "Index";
}

@model List<CinemaHallVM>
﻿@{
	ViewData["Title"] = "Index";
}
<div class="container-fluid">
	<div class="container">
		<div class="d-flex justify-content-end mb-3">  @Html.ActionLink("Add", "Create", "CinemaHalls", null, new { @class = "btn btn-primary" })</div>

		<table class="table table-striped">
			<thead>
				<tr>
					<th scope="col">Id</th>
					<th scope="col">Name</th>
					<th scope="col">Capacity</th>
					<th scope="col">Location</th>
					<th scope="col">Operation</th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr>
						<th scope="row">@item.Id</th>
						@* <td><img width="150px" height="150px" src="@Url.Content($"~/images/{item.Thumbnail}")" /></td> *@
						<td>@item.Name</td>
						<td>@item.Capacity</td>
						<td>@item.Location</td>
						<td>
							<a class="btn btn-warning" asp-area="admin" asp-controller="CinemaHalls" asp-action="Edit" asp-route-id="@item.Id">
								<i class="far fa-pen-to-square"></i>

							</a>
							<a class="btn btn-danger" asp-area="admin" asp-controller="CinemaHalls" asp-action="Delete" asp-route-id="@item.Id">
								<i class="fas fa-trash-can"></i>
							</a>
						</td>
					</tr>
				}


			</tbody>
		</table>

	</div>
</div>
