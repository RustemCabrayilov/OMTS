            </div>
            <div class="form-group">
                <label asp-for="CinemaHallId" class="control-label"></label>
                <select asp-for="CinemaHallId"
                        class="form-control"
                        asp-items="@(new SelectList(Model.CinemaHalls, nameof(CinemaHall.Id), nameof(CinemaHall.Name)))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="CinemaHallId" class="text-danger"></span>
            </div>
     

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

